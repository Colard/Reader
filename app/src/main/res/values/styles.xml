<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="GridLinearLayoutStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical|top</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="GridTextViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">350dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GridCardViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="GridImageViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:maxHeight">200dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>